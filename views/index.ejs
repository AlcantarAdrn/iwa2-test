    <script>
     async function fetchData(url){
    const response = await fetch('/records');
    var data = await response.json();
    console.log(data);
    show(data);
}   
  function show(data) {
    let tab = 
        `<tr>
          <th>Artist: </th>
          <th>Title: </th>
          <th> Price: </th>
         </tr>`;
    
    // Loop to access all rows 
    for (let r of data) {
        tab += `<tr> 
    <td>${r.artist} </td>
    <td>${r.title}</td> 
    <td>${r.price}</td>

</tr>`;
    }
    // Setting innerHTML as tab variable
    document.getElementById("add_to_me").innerHTML = tab;
}
    </script>    


